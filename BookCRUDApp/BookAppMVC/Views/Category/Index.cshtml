@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
}


<div class="d-flex justify-content-between">
    <div><h1>Category</h1></div>
    <div>
        <a class="btn btn-primary" asp-controller="Category" asp-action="Create">Create New Category</a>
    </div>
</div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Category Order</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var cat in Model)
        {
            <tr>
                <td width="50%">@cat.Name</td>
                <td width="50%">@cat.DisplayOrder</td>
                <td class="w-75 btn-group" role="group">
                    <a class="btn btn-warning mx-3" asp-controller="Category" asp-action="Edit" asp-route-id="@cat.Id">
                        <i class="bi bi-pencil-square"></i>Edit</a>
                    <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@cat.Id">
                        <i class="bi bi-trash-fill"></i>Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
